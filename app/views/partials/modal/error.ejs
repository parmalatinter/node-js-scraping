<% if (!locals.error) { return } %>
<div class="modal fade" id="modal_message" tabindex="-1" role="dialog" aria-labelledby="modalLabel">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title"><%= error ? error.message : '' %></h4>

                <p class="modal-error"><%= error.error %></p>
                <p class="modal-stack"><%= error.stack %></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">閉じる</button>
            </div>
        </div>
    </div>
</div>